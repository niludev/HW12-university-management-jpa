<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
  <persistence-unit name="default">

    <class>ir.maktabsharif.models.Person</class>
    <class>ir.maktabsharif.models.Teacher</class>
    <class>ir.maktabsharif.models.Student</class>

    <properties>
      <property
              name="jakarta.persistence.jdbc.url"
              value="jdbc:postgresql://localhost:5432/appdb"/>

      <property
              name="jakarta.persistence.jdbc.user"
              value="appuser"/>

      <property
              name="jakarta.persistence.jdbc.password"
              value="apppass"/>

<!--          sakht / update jadval ha -->
      <property
              name="hibernate.hbm2ddl.auto"
              value="update"/>

      <property
              name="hibernate.show_sql"
              value="true"/>

      <!--        <property-->
      <!--                name="hibernate.format_sql"-->
      <!--                value="true"/>-->

    </properties>

  </persistence-unit>
</persistence>
